<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/bottom_paly_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/bg_play_bottom" >
	    <ImageView 
	        android:id="@+id/music_icon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@android:string/no"
	        android:layout_alignParentLeft="true"
            android:padding="4dp"
            android:src="@drawable/ic_user" />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/music_icon"
	        android:layout_centerVertical="true"
	        android:orientation="vertical">
	        <TextView android:id="@+id/tv_singer_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_small"
	            android:textColor="@color/white" />
	        <TextView android:id="@+id/tv_song_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_mini"
	            android:textColor="@color/white"/>
	    </LinearLayout>
	    <ImageView 
            android:id="@+id/main_music_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_btn_play"
            android:contentDescription="@string/default_img_desc" />

</RelativeLayout>
