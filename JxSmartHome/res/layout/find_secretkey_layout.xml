<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal" >

	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scrollbars="none" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >

	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:orientation="vertical">
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="25dp"
       		    android:layout_marginTop="10dp"
       		    android:textStyle="bold"
	            android:textColor="@color/text"
	            android:textSize="@dimen/text_size_medium"
	            android:text="@string/question_answer_title" />
	    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:padding="5dp" >
	
    <TextView
        android:id="@+id/tv_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:textSize="@dimen/text_size_medium"
        android:text="@string/question_1"
        android:textColor="@color/dark_gray" />

    <TextView
        android:id="@+id/tv_secret_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_question1"
        android:layout_below="@+id/tv_question1"
        android:layout_marginTop="5dp"
        android:text="@string/sercert_querstion1"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/et_secretkey_question1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tv_secret_question1"
        android:layout_below="@+id/tv_secret_question1"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/dark_gray"
        android:background="@drawable/selecter_text_input" >
    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_secretkey_question1"
        android:layout_below="@+id/et_secretkey_question1"
        android:layout_marginTop="15dp"
        android:text="@string/question_2"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:id="@+id/tv_secret_question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="5dp"
        android:text="@string/sercert_querstion1"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/et_secretkey_question2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/tv_secret_question2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_secret_question2"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:textColor="@color/dark_gray"
        android:background="@drawable/selecter_text_input" />

    <Button
        android:id="@+id/btn_find_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_secretkey_question2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/et_secretkey_question2"
        android:layout_below="@+id/et_secretkey_question2"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_button_save"
        android:text="@string/button_ok"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_medium" />

	</RelativeLayout>
	</LinearLayout>
	</ScrollView>
</RelativeLayout>