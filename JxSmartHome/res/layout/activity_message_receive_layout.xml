<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.jinxin.jxsmarthome">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message"
        android:layout_margin="10dp">
        <TextView 
            android:id="@+id/tv_time_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_large"
            android:layout_marginTop="20dp"
            android:text="00:00-24:00"
            android:textColor="@color/text_green"/>
        <com.jinxin.jxsmarthome.ui.widget.ragebar.RangeBar 
            android:id="@+id/range_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:pinColor="@color/text_green"
            app:barColor="@color/text_green"
            app:tickStart="0.0"
            app:tickEnd="24.0"
            app:selectorColor="@color/text_green"
            app:tickColor="@color/text_green"
            app:connectingLineColor="@color/text_green"
            android:layout_below="@id/tv_time_range"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/range_bar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-16dp"
            android:orientation="vertical">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_triangle"/>
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/text_color"
	            android:text="12"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
