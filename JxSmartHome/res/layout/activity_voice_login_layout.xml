<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:text="@string/voice_login_password_tips"/>
    <TextView 
        android:id="@+id/voice_login_pwd_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/tips_tv"
        android:textSize="@dimen/text_size_xxlarge"
        android:textColor="@color/text_color"
        android:gravity="center"/>
	<ImageView
	    android:id="@+id/iv_reverify"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:src="@drawable/ico_voice_reload"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:contentDescription="@string/default_img_desc"
	    android:layout_marginBottom="48dp"/>
	
	<TextView 
	    android:id="@+id/show_fbk_tv"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_above="@id/iv_reverify"
	    android:layout_marginBottom="10dp"
	    android:textColor="@color/text_color"
	    android:textSize="@dimen/text_size_small"/>
	
	<TextView 
	    android:id="@+id/show_msg_tv"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_above="@id/show_fbk_tv"
	    android:layout_marginBottom="10dp"
	    android:textColor="@color/text_color"
	    android:textSize="@dimen/text_size_small"/>
</RelativeLayout>
