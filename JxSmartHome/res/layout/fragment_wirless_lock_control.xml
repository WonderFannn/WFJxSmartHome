<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_hover_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/top_line" />

        <TextView
            android:id="@+id/tv_low_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ico_low_power"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="低电量"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_small"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_state_backgroind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/default_img_desc"
                android:src="@drawable/ico_lock_close" />

            <TextView
                android:id="@+id/tv_safety_warring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:drawableLeft="@drawable/ico_lock_safety"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:text="安防报警"
                android:visibility="invisible"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_lock_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:text="当前状态：关闭"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/btn_switch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_save"
                android:text="开锁"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_check_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_save"
                android:text="状态查询"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>