<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<ImageView android:layout_width="wrap_content" android:id="@+id/Image"
		android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_below="@+id/Image"
		android:id="@+id/Name" android:layout_centerHorizontal="true"
		android:shadowColor="#00000000" android:textColor="#ffffffff"
							  android:shadowDx="2.0"
							  android:shadowDy="2.0"
							  android:shadowRadius="1.0" />
</RelativeLayout> 
