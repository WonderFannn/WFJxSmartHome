<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/top_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:text="@string/match_reminder_1" />

    <TextView
        android:id="@+id/tv_infraredcode_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="1/32"
        />

    <LinearLayout
        android:id="@+id/ll_switcher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <ImageView
            android:id="@+id/iv_btn_infrared_switch_back"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:src="@drawable/btn_infrared_switch_back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_btn_codetest_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:clickable="true"
                android:src="@drawable/btn_matchcode_power" />

            <ImageView
                android:id="@+id/iv_btn_codetest_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="true"
                android:padding="10dp"
                android:src="@drawable/btn_matchcode_mute" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical" >
			<ImageView
                android:id="@+id/iv_btn_codetest_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/btn_matchcode_menu" />

            <ImageView
                android:id="@+id/iv_btn_codetest_4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/btn_matchcode_mode" />
        </LinearLayout>
        
        <ImageView
            android:id="@+id/iv_btn_infrared_switch_next"
             android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:src="@drawable/btn_infrared_switch_next" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f5f5f5"
        android:gravity="center"
        android:text="@string/match_reminder_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" >

        <TextView
            android:id="@+id/tv_btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
        	android:gravity="center"
            android:layout_weight="1"
            android:text="@string/back" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5" />

        <TextView
            android:id="@+id/tv_btn_next_step"
            android:layout_width="0dp"
            android:layout_height="match_parent"
        	android:gravity="center"
        	android:layout_weight="1"
            android:text="@string/next_step" />

    </LinearLayout>

</LinearLayout>