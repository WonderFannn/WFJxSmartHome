<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/device_bg"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/fun_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/selector_device_item"
        android:orientation="vertical">
    <ImageView 
        android:id="@+id/fun_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="8dp"
        android:contentDescription="@string/default_img_desc"
        android:src="@drawable/icon_default" />
    <TextView 
        android:id="@+id/fun_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/item_text_hover"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_color"
        android:text="@string/test_string" />
    </LinearLayout>
</RelativeLayout>
