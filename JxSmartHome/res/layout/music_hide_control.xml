<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_ll_center"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/dark_gray"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/music_repeat_play"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/test_string"
        android:src="@drawable/selector_btn_music_cycle" />

    <ImageView
        android:id="@+id/music_sound_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/test_string"
        android:src="@drawable/selector_btn_music_add" />

    <ImageView
        android:id="@+id/music_sound_sub"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/test_string"
        android:src="@drawable/selector_btn_music_sub" />

    <ImageView
        android:id="@+id/music_iv_mute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:contentDescription="@string/test_string"
        android:src="@drawable/selector_btn_music_mute"/>
</LinearLayout>