<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/bg_main_top"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/custom_controller_on_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/selector_btn_control_off"
                android:contentDescription="@string/test_string"
                android:gravity="center"
                android:text="@string/control_off"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/custom_controller_zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:background="@drawable/selector_btn_control"
                android:contentDescription="@string/test_string"
                android:gravity="center"
                android:text="@string/control_zero"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/custom_controller_on_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/selector_btn_control_on"
                android:contentDescription="@string/test_string"
                android:gravity="center"
                android:text="@string/control_on"
                android:textColor="@color/white" />
        </RelativeLayout>

        <GridView
            android:id="@+id/custom_controller_numbers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:listSelector="@drawable/selector_grid_item_transparent"
            android:numColumns="3"
            android:scrollbars="none" >
        </GridView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/bg_main_bottom" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/custom_controller_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="1dp"
                android:background="@drawable/selector_btn_control_center"
                android:contentDescription="@string/test_string" />

            <ImageButton
                android:id="@+id/custom_controller_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/custom_controller_center"
                android:background="@drawable/selector_btn_control_left"
                android:contentDescription="@string/test_string" />

            <ImageButton
                android:id="@+id/custom_controller_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/custom_controller_center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_btn_control_up"
                android:contentDescription="@string/test_string" />

            <ImageButton
                android:id="@+id/custom_controller_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/custom_controller_center"
                android:background="@drawable/selector_btn_control_right"
                android:contentDescription="@string/test_string" />

            <ImageButton
                android:id="@+id/custom_controller_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/custom_controller_center"
                android:layout_centerHorizontal="true"
                android:background="@drawable/selector_btn_control_down"
                android:contentDescription="@string/test_string" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>