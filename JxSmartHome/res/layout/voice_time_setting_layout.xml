<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_hover_color"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/timer_task_name" />
        <EditText
            android:id="@+id/voice_repeat_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:background="@drawable/selecter_text_input"
            android:hint=""
            android:textSize="@dimen/text_size_medium"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/voice_repeat_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="10dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_medium"
            android:text="@string/timer_task_repeat"/>
        <TextView 
            android:id="@+id/voice_repeat_preiod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal"
            android:text="每天"
            android:textSize="@dimen/text_size_medium"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/voice_time_set_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:padding="10dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_medium"
            android:text="重复时间"/>
        <TextView 
            android:id="@+id/voice_repeat_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_medium"/>
    </LinearLayout>

</LinearLayout>
