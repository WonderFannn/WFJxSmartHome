<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bg_color"
    android:clickable="true"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/ib_enbale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@drawable/mode_switch_off"
        android:focusable="false"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/iv_socket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/default_img_desc"
        android:padding="5dp"
        android:src="@drawable/icon_socket_close" />

    <TextView
        android:id="@+id/tv_socket_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_socket_switch"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="状态：关"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_small" />

</LinearLayout>