<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor_white_state"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_thumb"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:contentDescription="@string/no"
        android:padding="6dp"
        android:src="@drawable/ico_cloud" />

    <ImageView
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:contentDescription="@string/no"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:src="@color/tab_item_hover" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:id="@+id/item_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:drawableLeft="@drawable/ico_wd"
                android:text="温度:"
                android:textSize="@dimen/text_size_mini" />

            <TextView
                android:id="@+id/item_detail_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@color/dark_gray"
                android:text="@string/comm_loading"
                android:textSize="@dimen/text_size_mini" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginLeft="4dp"
                android:drawableLeft="@drawable/ico_api"
                android:text="空气:"
                android:textSize="@dimen/text_size_mini" />
            
            <TextView
                android:id="@+id/item_detail_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/dark_gray"
                android:text="@string/comm_loading"
                android:textSize="@dimen/text_size_mini" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:drawableLeft="@drawable/ico_sd"
                android:layout_marginLeft="4dp"
                android:text="湿度"
                android:textSize="@dimen/text_size_mini" />
            
            <TextView
                android:id="@+id/item_detail_wet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textColor="@color/dark_gray"
                android:text="@string/comm_loading"
                android:textSize="@dimen/text_size_mini" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>