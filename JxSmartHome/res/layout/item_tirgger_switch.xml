<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" >

        <CheckBox
            android:id="@+id/item_cb_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:button="@drawable/selector_multiple_button" />

        <TextView
            android:id="@+id/item_fun_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/item_cb_btn"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="15dp"
	        android:layout_alignParentRight="true">

	        <ImageButton
	            android:id="@+id/imageButton_open"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:contentDescription="@string/default_img_desc"
	            android:background="@color/transparent"
	            android:focusable="false"
	            android:src="@drawable/ico_swithch_off" />
    	</LinearLayout>
    </RelativeLayout>
</LinearLayout>