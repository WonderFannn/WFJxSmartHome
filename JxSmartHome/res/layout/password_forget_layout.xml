<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_normal" >
    <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/top_line"/>
	<ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:scrollbars="none" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:orientation="vertical">
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="25dp"
       		    android:layout_marginTop="10dp"
       		    android:textStyle="bold"
	            android:textColor="@color/text"
	            android:textSize="@dimen/text_size_small"
	            android:text="@string/forget_password_title" />
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:orientation="vertical">
	        <TextView
		        android:id="@+id/tv_question1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="25dp"
		        android:layout_marginTop="5dp"
		        android:textSize="@dimen/text_size_small"
		        android:text="@string/question_1"
		        android:textColor="@color/text_color" />
	        <TextView
		        android:id="@+id/tv_secret_question1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="25dp"
		        android:text="@string/sercert_querstion1"
		        android:textColor="@color/text"
		        android:textSize="@dimen/text_size_mini" />
	        <EditText
	        android:id="@+id/et_secretkey_question1"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_marginRight="25dp"
	        android:layout_marginLeft="25dp"
	        android:layout_marginTop="5dp"
	        android:textColor="@color/text_color"
	        android:background="@drawable/selecter_text_input" />
	        
        <TextView
	        android:id="@+id/TextView01"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_marginRight="25dp"
	        android:layout_marginLeft="25dp"
	        android:text="@string/question_2"
	        android:textColor="@color/text_color"
	        android:textSize="@dimen/text_size_small" />

	    <TextView
	        android:id="@+id/tv_secret_question2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:layout_marginRight="25dp"
	        android:layout_marginLeft="25dp"
	        android:text="@string/sercert_querstion1"
	        android:textColor="@color/text"
	        android:textSize="@dimen/text_size_mini" />
	
	    <EditText
	        android:id="@+id/et_secretkey_question2"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:layout_marginRight="25dp"
	        android:layout_marginLeft="25dp"
	        android:layout_marginTop="5dp"
	        android:textColor="@color/text_color"
	        android:background="@drawable/selecter_text_input" />
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="@string/new_secretkey1"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text" />
    	<EditText
            android:id="@+id/et_new_secretkey"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp"
	        android:layout_marginLeft="25dp"
            android:background="@drawable/selecter_text_input"
            android:ems="10"
            android:textColor="@color/text_color"
            android:inputType="textPassword"
            android:hint="@string/new_secret_not_null" />
    	
    	<Button
            android:id="@+id/btn_forget_sure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="25dp"
	        android:layout_marginLeft="25dp"
            android:background="@drawable/selector_button_save"
            android:text="@string/forget_secret"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
    </LinearLayout>
	</ScrollView>
</RelativeLayout>