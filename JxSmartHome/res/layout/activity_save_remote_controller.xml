<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/top_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="#f5f5f5"
        android:text="遥控器名称" />

    <EditText
        android:id="@+id/et_device_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:ems="10"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:textColor="#555"
        android:textSize="25sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:background="#f5f5f5"
        android:text="快速命名" />
  	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="0dp"
  	    android:background="#f5f5f5"
  	    android:layout_weight="3"
  	     >

 	 	<FrameLayout
 	 	    android:id="@+id/btn_scene"
  		    android:layout_width="0dp"
  		    android:layout_height="match_parent"
  		    android:layout_margin="5dp"
  		    android:background="@drawable/bg_matchcode_scene"
  		    android:layout_weight="1" >

  		    <TextView
  		        android:layout_width="wrap_content"
  		        android:layout_height="wrap_content"
  		        android:layout_gravity="center_horizontal|bottom"
  		        android:layout_marginBottom="10dp"
  		        android:textColor="#fff"
  		        android:text="默认" />
  		</FrameLayout>

  		<FrameLayout
 	 	    android:id="@+id/btn_office"
  		    android:layout_width="0dp"
  		    android:layout_height="match_parent"
  		    android:background="@drawable/bg_matchcode_office"
  		    android:layout_margin="5dp"
  		    android:layout_weight="1" >


  		    <TextView
  		        android:layout_width="wrap_content"
  		        android:layout_height="wrap_content"
  		        android:layout_gravity="center_horizontal|bottom"
  		        android:layout_marginBottom="10dp"
  		        android:textColor="#fff"
  		        android:text="办公室" />
  		</FrameLayout>

  		<FrameLayout
  		    android:id="@+id/btn_drawing_room"
  		    android:layout_width="0dp"
  		    android:layout_weight="1"
  		    android:layout_margin="5dp"
  		    android:background="@drawable/bg_matchcode_drawing_room"
  		    android:layout_height="match_parent" >


  			<TextView
  			    android:layout_width="wrap_content"
  			    android:layout_height="wrap_content"
  			    android:layout_gravity="center_horizontal|bottom"
  			    android:layout_marginBottom="10dp"
  		        android:textColor="#fff"
  			    android:text="客厅" />

  		</FrameLayout>

  	</LinearLayout>

  	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="0dp"
  	    android:background="#f5f5f5"
  	    android:layout_weight="3" >

  		<FrameLayout
  		    android:id="@+id/btn_dining_room"
  		    android:layout_width="0dp"
  		    android:layout_height="match_parent"
  		    android:layout_margin="5dp"
  		    android:background="@drawable/bg_matchcode_dining_room"
  		    android:layout_weight="1" >


  		    <TextView
  		        android:layout_width="wrap_content"
  		        android:layout_height="wrap_content"
  		        android:layout_gravity="center_horizontal|bottom"
  		        android:layout_marginBottom="10dp"
  		        android:textColor="#fff"
  		        android:text="餐厅" />
  		</FrameLayout>

  		<FrameLayout
  		    android:id="@+id/btn_kitchen"
  		    android:layout_width="0dp"
  		    android:layout_margin="5dp"
  		    android:layout_height="match_parent"
  		    android:background="@drawable/bg_matchcode_kitchen"
  		    android:layout_weight="1" >


  		    <TextView
  		        android:layout_width="wrap_content"
  		        android:layout_height="wrap_content"
  		        android:layout_gravity="center_horizontal|bottom"
  		        android:textColor="#fff"
  		        android:layout_marginBottom="10dp"
  		        android:text="厨房" />
  		</FrameLayout>

  		<FrameLayout
  		    android:id="@+id/btn_bedroom"
  		    android:layout_width="0dp"
  		    android:layout_margin="5dp"
  		    android:layout_height="match_parent"
  		    android:background="@drawable/bg_matchcode_bedroom"
  		    android:layout_weight="1" >


  		    <TextView
  		        android:layout_width="wrap_content"
  		        android:layout_height="wrap_content"
  		        android:layout_gravity="center_horizontal|bottom"
  		        android:layout_marginBottom="10dp"
  		        android:textColor="#fff"
  		        android:text="卧室" />
  		</FrameLayout>

  	</LinearLayout>

  	<TextView
  	    android:layout_weight="3"
  	    android:layout_height="0dp"
  	    android:layout_width="match_parent"
  	    android:background="#f5f5f5"
  	    />

  	<LinearLayout
  	    android:layout_height="0dp" 
  	    android:layout_width="match_parent"
  	    android:layout_weight="2">

  		<TextView
  		    android:id="@+id/btn_return"
  		    android:layout_width="0dp"
  		    android:layout_height="match_parent"
  		    android:layout_weight="1"
  		    android:gravity="center"
  		    android:background="#1e8f30"
  		    android:text="返回" />

  		<TextView
			android:background="#f5f5f5"
  		    android:layout_width="2dp"
  		    android:layout_height="match_parent"
  		    android:text="" />

  		<TextView
  		    android:id="@+id/btn_save"
  		    android:layout_width="0dp"
  		    android:layout_height="match_parent"
  		    android:layout_weight="1"
  		    android:gravity="center"
  		    android:background="#1e8f30"
  		    android:text="保存" />
  	    
  	</LinearLayout>

</LinearLayout>